{
    <div class="btn-group">
        @*<a type="button" class="btn btn-primary" href="@Url.Action("Edit/"+item.Id)"><i class="far fa-edit"></i></a>*@
        <form action="Edit">
            <button type="submit" class="btn btn-primary my-2 my-sm-0 mx-1 px-2 py-1" asp-action="Edit" asp-route-id="@Model"><i class="far fa-edit"></i> </button>
        </form>
        <form method="post" action="Delete">
            <button onclick="if (!confirm('Are you sure you want to delete this Item?')){ return false }" type="submit" class="btn btn-danger my-2 my-sm-0 mx-1 px-2 py-1 bg-danger" asp-action="Delete" asp-route-id="@Model"><i class="far fa-trash-alt"></i> </button>
        </form>
    </div>

}


