    <header class="text-muted bg-dark">
        <nav class="navbar navbar-light bg-light justify-content-between bg-dark">
            <div class="container">
                <div>
                    <img class="img-fluid my-2 float-left " src="https://mininnovation.uz/assets/public/images/state-site-logo.png" alt="">

                </div>

                <form class="form-inline" asp-controller="Home" asp-action="Index" method="get">
                </form>
                @if (SignInManager.IsSignedIn(User))
                {
                    <form class="form-inline" method="post" asp-controller="Account" asp-action="Logout">
                        <p class="my-2 my-sm-0 mx-2 px-4 text-white">@User.Identity.Name</p>
                        <button class="btn btn-outline-info my-2 my-sm-0 mx- 1 px-1" type="submit">Logout<i class="fas fa-sign-out-alt px-1"></i></button>
                        <a class="mx-5" asp-Controller="Users" asp-action="Index">Users</a>
                    </form>
                }
                else
                {
                    <form class="form-inline" method="post" asp-controller="Account" asp-action="Login">

                        <button class="btn btn-outline-info my-2 my-sm-0 mx-1 px-1" type="submit">Login <i class="fas fa-sign-in-alt px-1"></i></button>
                    </form>

                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Eshop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
